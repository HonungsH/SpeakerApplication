<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:barchart="http://schemas.android.com/apk/res-auto"
    tools:context=".EqActivity$PlaceholderFragment">

    <me.ithebk.barchart.BarChart
        android:id="@+id/bar_chart_vertical"
        android:layout_width="310dp"
        android:layout_height="97dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_label"
        barchart:bar_color="@color/colorPrimary"
        barchart:bar_max_value="100"
        barchart:bar_show_animation="true"
        barchart:bar_show_auto_color="false"
        barchart:bar_show_value="true"
        barchart:bar_spaces="5dp"
        barchart:bar_text_color="#808080"
        barchart:bar_text_size="10sp"
        barchart:bar_type="vertical"
        barchart:bar_width="30dp">


    </me.ithebk.barchart.BarChart>

    <me.ithebk.barchart.BarChart
        android:id="@+id/bar_chart_bands"
        android:layout_width="304dp"
        android:layout_height="61dp"
        android:layout_marginBottom="172dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"

        barchart:bar_max_value="100"
        barchart:bar_show_animation="true"
        barchart:bar_show_auto_color="false"
        barchart:bar_show_value="true"
        barchart:bar_spaces="5dp"
        barchart:bar_text_color="#000000"
        barchart:bar_text_size="13sp"
        barchart:bar_type="vertical"
        barchart:bar_width="30dp">


    </me.ithebk.barchart.BarChart>


    <TextView
        android:id="@+id/section_label"
        android:layout_width="281dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <HorizontalScrollView
        android:id="@+id/horizontalbar"
        android:layout_width="354dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fadeScrollbars="false"

        android:scrollbarStyle="insideInset"
        android:scrollbarThumbHorizontal="@drawable/scrollview_thumb"
        android:scrollbarTrackHorizontal="@drawable/veritcal_scrollview"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"

            android:gravity="fill|fill_horizontal"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabonline"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:backgroundTint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/rss"

                tools:layout_editor_absoluteY="175dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabplay"
                app:backgroundTint="@android:color/white"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="40dp"

                app:srcCompat="@drawable/tunetest"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="157dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabstop"
                app:backgroundTint="@android:color/white"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/angular"
                tools:layout_editor_absoluteY="175dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/setBestEq"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                app:backgroundTint="@android:color/holo_green_light"
                android:layout_margin="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fabstop"
                app:layout_constraintHorizontal_bias="0.575"
                app:layout_constraintStart_toEndOf="@+id/fab"
                app:layout_constraintVertical_bias="0.345"
                app:srcCompat="@drawable/plus" />



            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabreset"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:backgroundTint="@android:color/holo_red_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert"

                tools:layout_editor_absoluteY="175dp" />








        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/score_text"
        android:layout_width="179dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="94dp" />


</android.support.constraint.ConstraintLayout>
